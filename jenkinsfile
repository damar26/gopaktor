#!/usr/bin/env groovy

node {
    stage 'Build and Deploy'
    docker.image('dr.gopaktor.com/paktor/build-android:latest').inside {
        checkout scm

        sh "ls -al"
        sh "pwd"
        sh "export ANDROID_HOME=/opt/android-sdk-linux"
        sh "export JAVA_HOME=/usr/bin/java"
        sh "java -version"
        sh "touch ~/.gradle/gradle.properties && echo "org.gradle.daemon=true" >> ~/.gradle/gradle.properties"
        sh "./gradlew clean"
    }
}
